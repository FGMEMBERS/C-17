<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>

 <submodel> 
    <name>parachutist</name>
    <model>Aircraft/fgukpayloads/para/parachuter.xml</model>
    <!--
    <condition>
      <equals>
        <property>instrumentation/doors/passenger/position-norm</property>
	<value>1</value>
      </equals>
    </condition>
    -->
    <trigger>ai/submodels/submodel/parachutist</trigger>
    <speed>0</speed>
    <repeat>true</repeat>
    <delay>1.5</delay>
    <count>10</count>
    <x-offset> -5 </x-offset>
    <y-offset>  0 </y-offset>
    <z-offset> -2 </z-offset>
    <yaw-offset>0.0</yaw-offset>
    <pitch-offset>0.0</pitch-offset>
    <cd>1.2</cd>
    <eda>100</eda>
    <weight>200</weight>
    <wind>true</wind>
    <buoyancy>20</buoyancy>
    <life>600</life>
  </submodel>

 
 <!-- Countermeasures -->

  <submodel>
    <name>flares</name>
    <model>Aircraft/C-17/Models/effects/Countermeasures/flare.xml</model>
    <trigger>ai/submodels/submodel/flare-release</trigger>
    <speed>10</speed>
    <repeat>true</repeat>
    <delay>0.2</delay>
    <count>50</count>
    <x-offset>5</x-offset>
    <y-offset>0</y-offset>
    <z-offset>0</z-offset>
    <yaw-offset>90.0</yaw-offset>
    <life>5</life>
    <buoyancy>8</buoyancy>
    <eda>1.0</eda>
  </submodel>
  
 <submodel>
