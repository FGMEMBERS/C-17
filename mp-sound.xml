<?xml version="1.0"?>

<PropertyList>
  <fx>
    <!-- External Sounds -->
    <!-- Engines-->
    <!-- Engines -->
    <engine>
      <name>left engine</name>
      <path>Sounds/jet.wav</path>
      <mode>looped</mode>
      
      <volume>
        <property>engines/engine[0]/thrust-lbs</property>
        <factor>0.000015</factor>
        <min>0.0</min>
        <max>1</max>
      </volume>
      
      <position>
        <x>2.75</x>
        <y>9.8</y>
        <z>-3</z>
      </position>
      <reference-dist>200.0</reference-dist>
      <max-dist>500.0</max-dist>
    </engine>

    <engine>
      <name>left n1</name>
      <path>Aircraft/C-17/Sounds/whine.wav</path>
      <mode>looped</mode>
      <property>engines/engine[0]/rpm</property>
      <pitch>
        <property>/engines/engine[0]/rpm</property>
        <offset>0</offset>
        <factor>0.01</factor>
        <min>0.0</min>
        <max>1.0</max>
      </pitch>
      <volume>
        <property>engines/engine[0]/rpm</property>
        <factor>0.1</factor>
        <min>0.0</min>
        <max>0.6</max>
      </volume>
      
      <position>
        <x>-5.7</x>
        <y>9.8</y>
        <z>-3</z>
      </position>
      <reference-dist>10.0</reference-dist>
      <max-dist>30.0</max-dist>
    </engine>

    <engine>
      <name>leftwhine2</name>
      <path>Aircraft/C-17/Sounds/whine2.wav</path>
      <mode>looped</mode>
      <property>engines/engine[0]/rpm</property>
      <condition>
	<and>
	  <not>
            <greater-than>
              <property>/position/altitude-ft</property>
              <value>400</value>
            </greater-than>
	  </not>
	</and>
      </condition>
      <pitch>
        <property>/engines/engine[0]/rpm</property>
        <offset>0</offset>
        <factor>0.01</factor>
        <min>0.0</min>
        <max>1.0</max>
      </pitch>
      <volume>
        <property>engines/engine[0]/rpm</property>
        <factor>0.1</factor>
        <min>0.0</min>
        <max>0.6</max>
      </volume>
      <volume>
        <property>sim/sound/Evolume</property>
      </volume>
      <position>
        <x>-5.7</x>
        <y>9.8</y>
        <z>-3</z>
      </position>
      <reference-dist>10.0</reference-dist>
      <max-dist>30.0</max-dist>
    </engine>

    <engine>
      <name>right engine</name>
      <path>Sounds/jet.wav</path>
      <mode>looped</mode>
      <condition>
        <not>
          <property>controls/engines/engine[1]/cutoff</property>
        </not>
      </condition>
      <volume>
        <property>/engines/engine[1]/thrust-lbs</property>
        <factor><factor>0.000015</factor></factor>
        <min>0.0</min>
        <max>1.0</max>
      </volume>
      
      <position>
        <x>2.75</x>
        <y>-9.8</y>
        <z>-3</z>
      </position>
      <reference-dist>200.0</reference-dist>
      <max-dist>500.0</max-dist>
    </engine>

    <engine>
      <name>right n1</name>
      <path>Aircraft/C-17/Sounds/whine.wav</path>
      <mode>looped</mode>
      <property>engines/engine[1]/rpm</property>
      <volume>
        <property>engines/engine[1]/rpm</property>
        <factor>0.1</factor>
        <min>0.0</min>
        <max>0.6</max>
      </volume>
      <volume>
        <property>sim/sound/Evolume</property>
      </volume>
      <pitch>
        <property>/engines/engine[1]/rpm</property>
        <offset>0</offset>
        <factor>0.01</factor>
        <min>0.0</min>
        <max>1.0</max>
      </pitch>
      <position>
        <x>-5.75</x>
        <y>-9.8</y>
        <z>-3</z>
      </position>
      <reference-dist>10.0</reference-dist>
      <max-dist>30.0</max-dist>
    </engine>

    <engine>
      <name>rightwhine2</name>
      <path>Aircraft/C-17/Sounds/whine2.wav</path>
      <mode>looped</mode>
      <property>engines/engine[1]/rpm</property>
      <condition>
	<and>
	  <not>
            <greater-than>
              <property>/position/altitude-ft</property>
              <value>400</value>
            </greater-than>
	  </not>
	</and>
      </condition>
      <pitch>
        <property>/engines/engine[1]/rpm</property>
        <offset>0</offset>
        <factor>0.01</factor>
        <min>0.0</min>
        <max>1.0</max>
      </pitch>
      <volume>
        <property>engines/engine[1]/rpm</property>
        <factor>0.1</factor>
        <min>0.0</min>
        <max>0.6</max>
      </volume>
      <volume>
        <property>sim/sound/Evolume</property>
      </volume>
      <position>
        <x>-5.7</x>
        <y>9.8</y>
        <z>-3</z>
      </position>
      <reference-dist>10.0</reference-dist>
      <max-dist>30.0</max-dist>
    </engine>
    
    <engines>
      <name>left reverse-thrust</name>
      <mode>looped</mode>
      <path>Aircraft/C-17/Sounds/reverser.wav</path>
      <condition>
        <property>engines/engine[0]/running</property>
      </condition>
      <volume>
        <property>surface-positions/reverser-norm[0]</property>
      </volume>
      
      <position>
        <x>2.75</x>
        <y>9.8</y>
        <z>-3</z>
      </position>
      <reference-dist>250.0</reference-dist>
      <max-dist>500.0</max-dist>
    </engines>

    <engines>
      <name>right reverse-thrust</name>
      <mode>looped</mode>
      <path>Aircraft/C-17/Sounds/reverser.wav</path>
      <condition>
        <property>engines/engine[1]/running</property>
      </condition>
      <volume>
        <property>surface-positions/reverser-norm[1]</property>
      </volume>
      
      <position>
        <x>2.75</x>
        <y>-9.8</y>
        <z>-3</z>
      </position>
      <reference-dist>250.0</reference-dist>
      <max-dist>500.0</max-dist>
    </engines>

    <!-- flyby -->
    <flyby>
      <name>fly-by</name>
      <mode>once</mode>
      <path>Aircraft/C-17/Sounds/flyby2.wav</path>
      <condition>
	<and>
	  <greater-than>
	    <property>/velocities/mach</property>
	    <value>0.3</value>
	  </greater-than>
	  <equals>
	    <property>sim/current-view/view-number</property>
	    <value>6</value>
	  </equals>
	</and>
	<not>
          <property>/sim/current-view/internal</property>
	  <property>/engines/engine/out-of-fuel</property>
     	</not>
      </condition>
      <volume>
	<property>velocities/airspeed-kt</property>
	<factor>0.001</factor>
      </volume>
    </flyby>

  </fx>
  <guns>
    <name>gunfire</name>
    <mode>looped</mode>
    <path>Aircraft/F-23C/Sounds/gunfire.wav</path>
    <condition> 
      <property>controls/armament/trigger</property>
      <property>ai/submodels/submodel/count</property>
    </condition>
    <volume> 
      <factor>1.2</factor>
      <max>1.0</max>
    </volume>
    <reference-dist>100</reference-dist>
    <max-dist>1000</max-dist>
    <reference-dist>600.0</reference-dist>
    <max-dist>1000.0</max-dist>
  </guns>
</PropertyList>
