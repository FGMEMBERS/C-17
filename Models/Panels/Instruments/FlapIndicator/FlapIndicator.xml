<PropertyList>
  <path>FlapIndicator.ac</path>

  <animation>
    <type>rotate</type>   
    <object-name>needleL</object-name> 
    <property>fdm/jsbsim/instruments/flap-indicator/flap-pos-deg-l</property>
    <factor>4</factor>
    <axis>
      <x1-m>0.005135</x1-m>
      <y1-m>0</y1-m>
      <z1-m>0</z1-m>
      <x2-m>0.004638</x2-m>
      <y2-m>0</y2-m>
      <z2-m>0</z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>   
    <object-name>needleR</object-name> 
    <property>fdm/jsbsim/instruments/flap-indicator/flap-pos-deg-r</property>
    <factor>4</factor>
    <axis>
      <x1-m>0.005761</x1-m>
      <y1-m>0</y1-m>
      <z1-m>0</z1-m>
      <x2-m>0.005263</x2-m>
      <y2-m>0</y2-m>
      <z2-m>0</z2-m>
    </axis>
  </animation>

  <animation>
    <type>select</type>   
    <object-name>LETransit</object-name> 
    <condition>
      <property>fdm/jsbsim/instruments/flap-indicator/slat-in-transit</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>   
    <object-name>LEExtended</object-name> 
    <condition>
      <property>fdm/jsbsim/instruments/flap-indicator/slat-extended</property>
    </condition>
  </animation>

  <text>
    <name>FlapIndex</name>
    <font>lcd.txf</font>
    <character-size type="double">0.004</character-size>
    <offsets>
      <x-m>0.005239</x-m>
      <y-m>-0.01111</y-m>
      <z-m>0.001407</z-m>
    </offsets>
    <axis-alignment>yz-plane</axis-alignment>
    <type type="string">number-value</type>
    <format type="string">%3.0f</format>
    <truncate type="bool">false</truncate>
    <character-aspect-ratio type="double">0.8</character-aspect-ratio>
    <property>fdm/jsbsim/instruments/flap-indicator/flap-pos-percentage</property>    
    <alignment>right-top</alignment>
  </text>

  <animation>
    <object-name>FlapIndex</object-name>
    <type>material</type>
    <emission>
      <red>0.255</red>
      <green>1.0</green>
      <blue>1.0</blue>
    </emission>
  </animation>
  
  <!-- Lightmaps -->
  <effect>
    <inherits-from>backlighting</inherits-from>
    <object-name>face</object-name>
    <object-name>LETransit</object-name>
    <object-name>LEExtended</object-name>
    <object-name>needleL</object-name>
    <object-name>needleR</object-name>
  </effect>
  <effect>
    <inherits-from>floodlighting</inherits-from>
    <object-name>Frame</object-name>
  </effect>
</PropertyList>
