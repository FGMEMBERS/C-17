<system>
  <channel name="Spoiler extension degree">
    <switch name="instruments/speedbrake-indicator/spoiler-position">
      <default value="fcs/spoiler-pos-norm" />
      <test value="-0.0833">
	fcs/spoiler-pos-norm LE 0	
      </test>
    </switch>
    <pure_gain name="instruments/speedbrake-indicator/spoiler-needle-deflection">
      <input>instruments/speedbrake-indicator/spoiler-position</input>
      <gain>180</gain>
    </pure_gain>
  </channel>
</system>
