<PropertyList>
  <path>brakesAntiSkid.ac</path>

  <!-- Anti-Skid Switch-->
  <animation>
    <name>Anti skid switch</name>
    <type>knob</type>
    <object-name>switch</object-name> 
    <property>controls/gear/antiskid</property>
    <factor>53.80</factor>
    <axis>
      <x1-m>0.000028</x1-m>
      <y1-m>0.03237</y1-m>
      <z1-m>0.02336</z1-m>
      <x2-m>0.000028</x2-m>
      <y2-m>0.004237</y2-m>
      <z2-m>0.02336</z2-m>
    </axis>
    <action>
      <binding>
        <command>property-toggle</command>
        <property>controls/gear/antiskid</property>
	<repeat type="bool">false</repeat>
      </binding>
    </action>
  </animation>
  
  <!-- Lightmaps-->
  <effect>
    <inherits-from>Models/Panels/Instruments/PanelLighting/backlighting</inherits-from>
    <inherits-from>/Effects/chrome</inherits-from>
    <object-name>switch.armed</object-name>
    <object-name>switch.off</object-name>
  </effect>
  <effect>
    <inherits-from>Models/Panels/Instruments/PanelLighting/floodlighting</inherits-from>
    <object-name>switch</object-name>
    <object-name>switch.frame</object-name>
    <object-name>screw.hi.switch</object-name>
  </effect>
</PropertyList>
