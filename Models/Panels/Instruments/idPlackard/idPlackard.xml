<PropertyList>
  <path>idPlackard.ac</path>

  <text>
    <name>squad</name>
    <font>Palatino-Bold.txf</font>
    <character-size type="double">0.0055</character-size>
    <offsets>
      <x-m>0.003707</x-m>
      <y-m>0.02294</y-m>
      <z-m>0.02583</z-m>
    </offsets>
    <axis-alignment>yz-plane</axis-alignment>
    <type type="string">text-value</type>
    <property type="string">/fdm/jsbsim/systems/livery/selected/name</property>
    <character-aspect-ratio type="double">1</character-aspect-ratio>
    <alignment>right-top</alignment>
    <format type="string">%s</format>
    <max-width>0.046</max-width>
  </text>

  <text>
    <name>callsign</name>
    <font>Palatino-Bold.txf</font>
    <character-size type="double">0.00902</character-size>
    <offsets>
      <x-m>0.003707</x-m>
      <y-m>0.01739</y-m>
      <z-m>0.01013</z-m>
    </offsets>
    <axis-alignment>yz-plane</axis-alignment>
    <type type="string">text-value</type>
    <property type="string">/sim/multiplay/callsign</property>
    <character-aspect-ratio type="double">1</character-aspect-ratio>
    <alignment>right-top</alignment>
    <format type="string">%s</format>
    <max-width>0.042</max-width>
  </text>

  <animation>
    <object-name>callsign</object-name>
    <type>material</type>
    <emission>
      <factor-prop>fdm/jsbsim/instruments/panel-lighting/ledlight-status</factor-prop>
      <red>1.0</red>
      <green>1.0</green>
      <blue>1.0</blue>
    </emission>
  </animation>

  <animation>
    <object-name>squad</object-name>
    <object-name>callsign</object-name>
    <type>material</type>
    <condition>
      <equals>
	<property>/sim/multiplay/online</property>
	<value>0</value>
      </equals>
    </condition>
    <emission>
      <factor-prop>fdm/jsbsim/instruments/panel-lighting/ledlight-status</factor-prop>
      <red>1.0</red>
      <green>1.0</green>
      <blue>1.0</blue>
    </emission>
  </animation>

  <animation>
    <object-name>squad</object-name>
    <object-name>callsign</object-name>
    <type>material</type>
    <condition>
      <equals>
	<property>/sim/multiplay/online</property>
	<value>1</value>
      </equals>
    </condition>
    <emission>
      <factor-prop>fdm/jsbsim/instruments/panel-lighting/ledlight-status</factor-prop>
      <red>0.031372549</red>
      <green>0.023529412</green>
      <blue>0.5176</blue>
    </emission>
  </animation>

  
  <animation>
    <type>textranslate</type>
    <object-name>id.placcard.top</object-name>
    <property>/sim/multiplay/online</property>
    <factor>0.15625</factor>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>
  
