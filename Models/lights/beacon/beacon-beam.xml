    <property>sim/multiplay/generic/int[5]</property>
   </condition>
  </animation>
  
  <animation>
   <type>select</type>
   <object-name>beam</object-name>
   <condition>
    <property>sim/multiplay/generic/int[5]</property>
	<property>/sim/rendering/rembrandt/enabled</property>
   </condition>
  </animation>
 
 <animation>
   <type>light</type>
   <light-type>spot</light-type>
   <name>Beam1</name>
   <object-name>beam</object-name>
   <nopreview/>
   <position>
     <x>-0.07140</x>
     <y>0</y>
     <z>-0.05483</z>
   </position>
   <direction>
     <x>-0.9.361</x>
     <y>0</y>
     <z>0.0996</z>
   </direction>
   <ambient>
     <r>0.03</r>
     <g>0.03</g>
     <b>0.01</b>
     <a>1.0</a>
   </ambient>
   <diffuse>
     <r>0.8</r>
     <g>0.1</g>
     <b>0.1</b>
     <a>1.0</a>
   </diffuse>
   <specular>
     <r>1.0</r>
     <g>0.2</g>
     <b>0.2</b>
     <a>1.0</a>
   </specular>
   <dim-factor>
      <property>/sim/model/lights/daylight-adjuster</property>
      <factor>-1.1</factor>
	  <offset>1.2</offset>
      <min>0</min>
      <max>1.0</max>
   </dim-factor>
   <attenuation>
     <c>1.0</c>
     <l>0.2</l>
     <q>0.005</q>
   </attenuation>
   <exponent>35.0</exponent>
   <cutoff>200</cutoff>
   <near-m>1</near-m>
   <far-m>80</far-m>
 </animation>
 
 <animation>
  <type>dist-scale</type>
  <object-name>aura</object-name>
  <interpolation>
   <entry>
    <ind>0</ind>
    <dep>1</dep>
   </entry>
   <entry>
    <ind>500</ind>
    <dep>10</dep>
   </entry>
   <entry>
    <ind>4000</ind>
    <dep>15</dep>
   </entry>
  </interpolation>
  <center>
   <x-m>-0.0138</x-m>
   <y-m>0</y-m>
   <z-m>0.03455</z-m>
  </center>
 </animation>
 
 <animation>
  <object-name>aura</object-name>
  <type>range</type>
  <min-m>0.01</min-m>
  <max-m>15000</max-m>
 </animation>
 
  <animation>
  <type>flash</type>
  <object-name>aura</object-name>
  <offset>0.1</offset>
  <center>
   <x-m>-0.005</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0.2</z>
  </axis>
  <power>15</power>
 </animation>
 
 <animation>
  <type>blend</type>
  <object-name>aura</object-name>
  <property>sim/model/lights/daylight-adjuster</property>
  <factor>12</factor>
  <min>0.0</min>
  <max>0.80</max>
 </animation>
 
 <animation>
