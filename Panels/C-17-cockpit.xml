<?xml version="1.0"?>
<PropertyList>
  <path>C-17-cockpit.ac</path>

  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>70</max-m>
  </animation>

  <!-- Turns off non rembrant lighting and effects -->
  <animation>
    <type>select</type>
    <object-name>hudglas1</object-name>
    <object-name>hudglas1.001</object-name>
    <condition>
      <not>
        <property>/sim/rendering/rembrandt/enabled</property>
      </not>
    </condition>
  </animation>         

  <!-- Instruments -->
  <model>
    <path>Aircraft/C-17/Panels/Instruments/instruments.xml</path> 
    <offsets> 
      <x-m> 1.28</x-m>
      <y-m> 0.01</y-m>
      <z-m> 0.39</z-m>
      <pitch-offset>-10</pitch-offset>
    </offsets>
  </model>
</PropertyList>
