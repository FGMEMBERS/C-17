  <aerodynamics name="AERO: C-17" file="Aero/C-17-aerodynamics.xml" />

  <!--Systems-->
  <system name="PAYLOAD: C-17" file="Systems/cargobay-loading.xml" />
  <system name="LIVERY: C-17" file="Systems/livery-updating.xml" />

