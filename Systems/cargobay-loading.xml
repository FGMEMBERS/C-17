<?xml version="1.0"?>
<?xml-stylesheet href="JSBSim.xsl" type="application/xml"?>

<system>
    <channel name="Weight of Payload in Lbs">
      <switch name="systems/payload/selected/weight-lbs">
	<default value="systems/payload/empty/weight"/>
	<test value="systems/payload/empty/weight">
	  systems/payload/selected/cargo-id == systems/payload/empty/item-id
	</test>
	<test value="systems/payload/CH-47/weight">
	  systems/payload/selected/cargo-id == systems/payload/CH-47/item-id
	</test>
	<test value="systems/payload/M1Abrams/weight">
	  systems/payload/selected/cargo-id == systems/payload/M1Abrams/item-id
	</test>
	<test value="systems/payload/Hummer1x/weight">
	  systems/payload/selected/cargo-id == systems/payload/Hummer1x/item-id
	</test>
	<test value="systems/payload/Hummer2x/weight">
	  systems/payload/selected/cargo-id == systems/payload/Hummer2x/item-id
	</test>
	<test value="systems/payload/LandRover1x/weight">
	  systems/payload/selected/cargo-id == systems/payload/LandRover1x/item-id
	</test>
	<test value="systems/payload/LandRover2x/weight">
	  systems/payload/selected/cargo-id == systems/payload/LandRover2x/item-id
	</test>
	<test value="systems/payload/LandRover4x/weight">
	  systems/payload/selected/cargo-id == systems/payload/LandRover4x/item-id
	</test>
	<test value="systems/payload/Jackal1x/weight">
	  systems/payload/selected/cargo-id == systems/payload/Jackal1x/item-id
	</test>
	<test value="systems/payload/Jackal2x/weight">
	  systems/payload/selected/cargo-id == systems/payload/Jackal2x/item-id
	</test>
	<test value="systems/payload/MTVR/weight">
	  systems/payload/selected/cargo-id == systems/payload/MTVR/item-id
	</test>
	<test value="systems/payload/viking/weight">
	  systems/payload/selected/cargo-id == systems/payload/viking/item-id
	</test>
	<test value="systems/payload/bradle/weight">
	  systems/payload/selected/cargo-id == systems/payload/bradle/item-id
	</test>
	<test value="systems/payload/MLRS/weight">
	  systems/payload/selected/cargo-id == systems/payload/MLRS/item-id
	</test>
	<test value="systems/payload/stryker/weight">
	  systems/payload/selected/cargo-id == systems/payload/stryker/item-id
	</test>
	<test value="systems/payload/FV107/weight">
	  systems/payload/selected/cargo-id == systems/payload/FV107/item-id
	</test>
	<test value="systems/payload/FV510/weight">
	  systems/payload/selected/cargo-id == systems/payload/FV510/item-id
	</test>
	<test value="systems/payload/buffalo/weight">
	  systems/payload/selected/cargo-id == systems/payload/buffalo/item-id
	</test>
      </switch>
    </channel>

    <channel name="Cargo Item pointmass Loading">
      <switch name="inertia/pointmass-weight-lbs[4]">
	<default value="systems/payload/selected/weight-lbs"/>
      </switch>
    </channel>
</system>
