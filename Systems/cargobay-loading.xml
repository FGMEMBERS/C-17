    <channel name="Cargo Item pointmass Loading">
      <switch name="inertia/pointmass-weight-lbs[4]">
	<default value="systems/payload/selected/weight-lbs"/>
      </switch>
    </channel>

    <channel name="Pointmass Position Loading">
      <pure_gain name="systems/payload/selected/position-x-inches">
	<input>systems/payload/selected/position-x</input>
	<gain>39.3701</gain>
      </pure_gain>
      <pure_gain name="systems/payload/selected/position-y-inches">
	<input>systems/payload/selected/position-y</input>
	<gain>39.3701</gain>
      </pure_gain>
      <pure_gain name="systems/payload/selected/position-z-inches">
	<input>systems/payload/selected/position-z</input>
	<gain>39.3701</gain>
      </pure_gain>
      <switch name="inertia/pointmass-location-X-inches[4]">
	<default value="systems/payload/selected/position-x-inches"/>
      </switch>
      <switch name="inertia/pointmass-location-Y-inches[4]">
	<default value="systems/payload/selected/position-y-inches"/>
      </switch>
      <switch name="inertia/pointmass-location-Z-inches[4]">
	<default value="systems/payload/selected/position-z-inches"/>
      </switch>
    </channel>

    <channel name="Doors status">
      <switch name="systems/payload/doors/crew/position-norm">
	<default value="/instrumentation/doors/crew/position-norm"/>
      </switch>
      <switch name="systems/payload/doors/crew/open">
	<default value="0"/>
	<test value="1">
	  systems/payload/doors/crew/position-norm == 1
	</test>
      </switch>
      <switch name="systems/payload/doors/crew/closed">
	<default value="0"/>
	<test value="1">
	  systems/payload/doors/crew/position-norm == 0
	</test>
      </switch>

